{
  "compilerOptions": {
    /* ---------- Build Info ---------- */
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    /* ---------- Language Targets ---------- */
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,

    /* ---------- Module Resolution ---------- */
    "moduleResolution": "bundler",     // vite / esbuild mode
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "verbatimModuleSyntax": true,
    "baseUrl": ".",                    // for the alias below
    "paths": {
      "@/*": ["src/*"]                 // <== same alias shadcn expects
    },
    "esModuleInterop": true,           // fixes `import path from 'path'`

    /* ---------- Emit / JSX ---------- */
    "noEmit": true,
    "jsx": "react-jsx",

    /* ---------- Lint-like Flags ---------- */
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },

  /* Vite source files */
  "include": ["src"]
}
